set -e

mkdir -p ~/.local/bin
cp -u "$(dirname ${0})/clang-tidy" ~/.local/bin/clang-tidy
cp -u "$(dirname ${0})/src/ctcache/clang_tidy_cache.py" ~/.local/bin/clang-tidy-cache
chmod +x ~/.local/bin/clang-tidy
chmod +x ~/.local/bin/clang-tidy-cache
